<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 填充的颜色 -->
    <solid android:color="@color/home_item_bg"
        android:shape="rectangle"
        />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="15dp" />

    <stroke
    android:width="1dp"
    android:color="@color/home_item_bg" />
     边框宽度和颜色
    <padding
    android:left="15dp"
    android:top="10dp"
    android:right="15dp"
    android:bottom="10dp"
    />
</shape>


